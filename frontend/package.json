{
  "name": "snapstream",
  "version": "1.0.0",
  "private": true,
  "description": "SnapStream - Live Stream & Recording App",
  "type": "module",


  "author": {
    "name": "Umalo Sedia Tekno",
    "email": "umalo@gmail.com"
  },


  "main": "dist-electron/main.js",


  "scripts": {
    "dev": "vite",
    "dev:electron": "vite",
    "build:renderer": "vite build",
    "build:electron": "tsc -p tsconfig.electron.json",
    "build": "npm run build:electron && npm run build:renderer",
    "build:win": "npm run build && npx electron-builder --win",
    "preview": "vite preview"
  },


  "build": {
    "asar": false,
    "appId": "com.snapstream.app",
    "productName": "SnapStream",


    "directories": {
      "output": "release",
      "buildResources": "resources"
    },


    "files": [
      "dist/**",
      "dist-electron/**"
    ],


    "extraResources": [
      {
        "from": "../backend/uploads",
        "to": "uploads"
      }
    ],


    "win": {
      "target": "nsis",
      "icon": "icon.ico",
      "artifactName": "SnapStream-${version}-Setup.${ext}"
    },


    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "shortcutName": "SnapStream"
    }
  }
}
